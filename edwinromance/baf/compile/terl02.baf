IF
  Global("EdwinDekkieLetter","GLOBAL",1)
  InParty("Edwin")
  OR(2)
  !See("Edwin")
  !Range("Edwin",7)
THEN
  RESPONSE #100
    MoveToObject("Edwin")
END

IF
  Global("EdwinDekkieLetter","GLOBAL",1)
  InParty("Edwin")
  See("Edwin")
  Range("Edwin",7)
THEN
  RESPONSE #100
    Dialog("Edwin")
END

IF
  !InParty("Edwin")
THEN
  RESPONSE #100
    EscapeArea()
END

